{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2022",
    "checkJs": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@utils/*": ["src/utils/*"],
      "@components/*": ["src/components/*"],
      "@config/*": ["config/*"]
    }
  },
  "include": ["src/**/*.js", "tests/**/*.js", "config/**/*.js", "playwright.config.js"],
  "exclude": ["node_modules"]
}
